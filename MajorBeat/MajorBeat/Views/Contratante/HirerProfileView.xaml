<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MajorBeat.Views.Contratante.HirerProfileView"
             BackgroundColor="#4F1271"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout>
            <Grid>
                <Button  x:Name="voltar" HeightRequest="40" WidthRequest="100" CornerRadius="36" HorizontalOptions="Start" Margin="20,40,0,40" BackgroundColor="#e7e7e7" Clicked="voltar_Clicked_1"/>
                <Label Text="Voltar" FontSize="18" FontAttributes="Bold" FontFamily="InterBold" TextColor="#4F1271" Margin="0,46,250,0" HorizontalOptions="Center"/>
                <Image Source="back.png" HeightRequest="20" Margin="-330,0,0,0"   ZIndex="1"/>
            </Grid>

            <Label 
            Text="Criar Perfil"
            TextColor="White"
            FontSize="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold" 
            FontFamily="InterBold"/>

            <Grid>
                <Frame HeightRequest="200"
                       WidthRequest="200"
                       CornerRadius="100"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       BackgroundColor="White"
                       Margin="0,25,0,0">
                    <Image Aspect="AspectFill"/>
                </Frame>
                <Border Stroke="Gray"
                    StrokeThickness="3"
                    BackgroundColor="white"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="0,100,100,0"
                    WidthRequest="50"
                    HeightRequest="50"
                    StrokeShape="RoundRectangle 30">
                    <ImageButton Source="vector.png"
                             BackgroundColor="White"
                             CornerRadius="30"
                             WidthRequest="30"
                             HeightRequest="30"/>
                </Border>

            </Grid>

            <VerticalStackLayout WidthRequest="370">
                <!--nome perfil-->
            <Grid Margin="0,25,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="Nome do Perfil" TextColor="#e7e7e7" FontSize="16" FontAttributes="Bold" FontFamily="InterBold" Margin="40,0,0,0" HorizontalTextAlignment="Start"></Label>
                <Border StrokeShape="RoundRectangle 10" BackgroundColor="#e7e7e7" Margin="0,30,0,0" WidthRequest="370">
                    <Entry Grid.Row="1" Placeholder="Ex: Wagner Moura" PlaceholderColor="#604F1271" FontAttributes="Bold" FontFamily="InterBold" HeightRequest="55"></Entry>
                </Border>
            </Grid>

                <!--contatos-->
                <Grid Margin="0,25,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Text="Contatos" TextColor="#e7e7e7" FontSize="16" FontAttributes="Bold" FontFamily="InterBold" Margin="40,0,0,0" HorizontalTextAlignment="Start"></Label>
                    <Border StrokeShape="RoundRectangle 10" BackgroundColor="#e7e7e7" Margin="0,30,0,0" WidthRequest="370" HeightRequest="165">
                        <VerticalStackLayout>
                            <Grid HeightRequest="55">
                                <Label Text="Adicionar links" TextColor="#4F1271" FontSize="16" FontAttributes="Bold" FontFamily="InterBold" Margin="40,20,0,0" HorizontalTextAlignment="Start"/>
                                <BoxView 
                                    HeightRequest="1"        
                                    BackgroundColor="Gray"
                                    HorizontalOptions="FillAndExpand"
                                    Margin="0,60,0,0"/>
                            </Grid>
                            <Grid>
                                <Grid WidthRequest="120" 
                                      Margin="50,0,0,0" 
                                      HorizontalOptions="Start">
                                    
                                    <Image Source="linkedin.png"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           Margin="0,0,160,0"/>
                                    <Entry Placeholder="Adicionar +" 
                                           PlaceholderColor="#604F1271" 
                                           FontAttributes="Bold" 
                                           FontFamily="InterBold" 
                                           HeightRequest="55"/>
                                    
                                </Grid>
                                <Grid WidthRequest="120" 
                                      Margin="0,0,30,0" 
                                      HorizontalOptions="End">

                                    <Image Source="instagram.png"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           Margin="0,0,160,0"/>
                                    <Entry  
                                           Placeholder="Adicionar +" 
                                           PlaceholderColor="#604F1271" 
                                           FontAttributes="Bold" 
                                           FontFamily="InterBold" 
                                           HeightRequest="55"/>
                                </Grid>
                            </Grid>
                            <Grid>
                                <Grid WidthRequest="120" 
                                      Margin="50,0,0,0" 
                                      HorizontalOptions="Start">
                                    
                                    <Image Source="facebook.png"
                                           HeightRequest="30"
                                           WidthRequest="30"
                                           Margin="0,0,160,0"/> 
                                    
                                    <Entry Grid.Row="1" 
                                           Placeholder="Adicionar +" 
                                           PlaceholderColor="#604F1271" 
                                           FontAttributes="Bold" 
                                           FontFamily="InterBold" 
                                           HeightRequest="55"/>
                                    
                                </Grid>
                                <Grid WidthRequest="120" 
                                      Margin="0,0,30,0" 
                                      HorizontalOptions="End" >
                                    
                                        <Image Source="twitter.png"
                                               HeightRequest="30"
                                               WidthRequest="30"
                                               Margin="0,0,160,0"/>
                                    
                                        <Entry 
                                               Grid.Row="1" 
                                               Placeholder="Adicionar +" 
                                               PlaceholderColor="#604F1271" 
                                               FontAttributes="Bold" 
                                               FontFamily="InterBold" 
                                               HeightRequest="55"/>     
                                </Grid>
                            </Grid>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
                
                
                <!--biografia-->
                <Grid Margin="0,25,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Biografia" TextColor="#e7e7e7" FontSize="16" FontAttributes="Bold" FontFamily="InterBold" Margin="40,0,0,0" HorizontalTextAlignment="Start"></Label>
                    <Border StrokeShape="RoundRectangle 10" BackgroundColor="#e7e7e7" Margin="0,30,0,0" WidthRequest="370" HeightRequest="200">
                        <Editor AutoSize="TextChanges" Grid.Row="1" Placeholder="Descreva-se:" PlaceholderColor="#604F1271" FontAttributes="Bold" FontFamily="InterBold"></Editor>
                    </Border>
                </Grid>
            </VerticalStackLayout>
            <Grid Margin="0,-20,0,50">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Button Grid.Row="0" Text="Criar Perfil" Margin="0,70,0,0" BackgroundColor="#e7e7e7" TextColor="#4F1271" HeightRequest="60" WidthRequest="200" FontSize="17" FontAttributes="Bold" FontFamily="InterBold" ></Button>
                <!--Command="{Binding RegistrarCommand}"-->
                <Label  Grid.Row="1" Text="Termos de Uso e PolÃ­tica de Privacidade" HorizontalOptions="Center" TextColor="#e7e7e7" Margin="0,30,0,0"></Label>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>